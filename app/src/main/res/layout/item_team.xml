<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/team_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/main_me_line_bg">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/team_logo"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true"
        />


    <ImageView
        android:id="@+id/real_name_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@mipmap/no_real_name"
        app:layout_constraintLeft_toLeftOf="@+id/team_logo"
        app:layout_constraintRight_toRightOf="@+id/team_logo"
        app:layout_constraintTop_toBottomOf="@+id/team_logo" />


    <TextView
        android:text="姓名"
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff333333"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/team_logo"
        app:layout_constraintLeft_toRightOf="@+id/team_logo"
        app:layout_constraintTop_toTopOf="@+id/team_logo" />


    <ImageView
        android:id="@+id/team_phone_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:src="@mipmap/call_phone"
        app:layout_constraintBottom_toBottomOf="@+id/team_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/team_name" />

    <View
        android:id="@+id/team_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginRight="12dp"
        android:background="#DCDCDC"
        app:layout_constraintLeft_toLeftOf="@+id/team_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/real_name_static" />

    <TextView
        android:id="@+id/team_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/team_turnover"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="团队交易额"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/team_view1"
        app:layout_constraintTop_toBottomOf="@+id/team_view1" />


    <TextView
        android:text="500"
        android:id="@+id/team_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#389DFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/team_tv1"
        app:layout_constraintLeft_toRightOf="@+id/team_tv1"
        app:layout_constraintTop_toTopOf="@+id/team_tv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="元"
        android:textColor="#ff7e7e7e"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/team_tv_price"
        app:layout_constraintLeft_toRightOf="@+id/team_tv_price"
        app:layout_constraintTop_toTopOf="@+id/team_tv_price" />


    <TextView
        android:id="@+id/team_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@mipmap/home_team_activation"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="本月新增商户"
        android:textColor="#ff7e7e7e"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/team_tv1"
        app:layout_constraintTop_toBottomOf="@+id/team_tv_price" />

    <TextView
        android:text="300"
        android:id="@+id/team_tv_team_trans_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#389DFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/team_tv2"
        app:layout_constraintLeft_toRightOf="@+id/team_tv2"
        app:layout_constraintTop_toTopOf="@+id/team_tv2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="户"
        android:textColor="#ff7e7e7e"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/team_tv_team_trans_amount"
        app:layout_constraintLeft_toRightOf="@+id/team_tv_team_trans_amount"
        app:layout_constraintTop_toTopOf="@+id/team_tv_team_trans_amount" />


    <ImageView
        android:id="@+id/team_tv_details"
        android:layout_width="7dp"
        android:layout_height="11dp"
        android:layout_marginRight="13dp"
        android:src="@mipmap/blue_right"
        app:layout_constraintBottom_toBottomOf="@+id/team_tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/team_tv1" />
</android.support.constraint.ConstraintLayout>