<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/login_top_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_top_bg"
        app:layout_constraintTop_toTopOf="parent" />


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="-85dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:hl_cornerRadius="5dp"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintTop_toBottomOf="@+id/login_top_iv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:text="13214402588"
                android:id="@+id/login_et_userName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="41dp"
                android:background="@null"
                android:drawableLeft="@mipmap/login_user_iv"
                android:drawablePadding="10dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="#ffaaaaaa"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="41dp"
                android:background="@color/login_view_bg" />

            <EditText
                android:text="zh7758521"
                android:id="@+id/login_et_passWord"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="41dp"
                android:background="@null"
                android:drawableLeft="@mipmap/login_pass_iv"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="#ffaaaaaa"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="41dp"
                android:background="@color/login_view_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="41dp">

                <CheckBox

                    android:id="@+id/login_remember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="记住密码"
                    android:textColor="#ffaaaaaa"
                    android:textSize="12sp"
                    android:theme="@style/MyCheckBox" />

                <TextView
                    android:id="@+id/login_tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="忘记密码"
                    android:textColor="#ffaaaaaa"
                    android:textSize="12sp" />


            </RelativeLayout>


            <Button
                android:id="@+id/login_bt_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/login_btn_on_bg"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="36dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*登录即代表您同意"
                    android:textColor="#ffbababa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/privacy_btn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《众鑫助手隐私政策》"
                    android:textColor="#53ACFB"
                    android:textSize="11sp" />
            </LinearLayout>


        </LinearLayout>


    </com.lihang.ShadowLayout>

</LinearLayout>